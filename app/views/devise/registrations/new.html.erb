<div class="container-fluid login-page sign-page">
  <div class="login-image">
        <div class="lifeline-logo">
          <%= image_tag "lifeline-new.png", class:"life-logo" %>
        </div>
        <div class="signup-image">
          <%= image_tag "signup.png", class:"signup-img" %>
        </div>
        <div class="lifeline-text">
          <h3> WELCOME </h3>
          <p>Lifeline medics is an innovation that will incorporate NFC hardware and medical records to revolutionise how data is stored. We at lifeline will provide smart ornaments that store medical records on an easy walk around ornament i.e. a ring, wristband. </p>
        </div>
  </div>

  <div class="signup-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
      <h4>Sign Up</strong></h4>
      <form class="mx-1 mx-md-4">
          <div class="d-flex flex-row align-items-center mb-4">
          <%= fa_icon "user", class: "fa-lg me-3 fa-fw" %>
        <div class="form-outline flex-fill mb-0">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "Name" , class: "form-control form-input" %>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <%= fa_icon "envelope", class: "fa-lg me-3 fa-fw" %>
        <div class="form-outline flex-fill mb-0">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Email", class: "form-control form-input" %>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <%= fa_icon "phone", class: "fa-lg me-3 fa-fw" %>
        <div class="form-outline flex-fill mb-0">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "Phone Number" ,placeholder:"Phone Number", class: "form-control form-input" %>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
      <%= fa_icon "id-badge", class: "fa-lg me-3 fa-fw" %>
        <div class="form-outline flex-fill mb-0">
          <%= f.text_field :national_doctor_id, autofocus: true, autocomplete: "Doctors ID" ,placeholder:"Doctor ID", class: "form-control form-input" %>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
      <%= fa_icon "hospital", class: "fa-lg me-3 fa-fw" %>
        <div class="form-outline flex-fill mb-0">
          <%= f.text_field :hospital_name, autofocus: true, autocomplete: "Hospital" , placeholder:"Hospital Name", class: "form-control form-input" %>
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-4">
        <%= fa_icon "lock", class: "fa-lg me-3 fa-fw mt-4" %>
          <div class="form-outline flex-fill mb-0">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"password", class: "form-control form-input" %>
          </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
          <%= fa_icon "key", class: "fa-lg me-3 fa-fw mt-2" %>
            <div class="form-outline flex-fill mb-0">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"confirm password", class: "form-control form-input" %>
            </div>
        </div>

        <div>
            <%= f.submit "Sign up" , class: "btn btn-primary form-input" %>
              Already have an account? <%= link_to "Sign in", new_session_path(resource_name) , class: "mt-3" %>
    </form>
    <% end %>
</div>
</div>