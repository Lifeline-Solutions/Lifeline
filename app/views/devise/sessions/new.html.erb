<div class="container-fluid login-page">
  <div class="login-image">
        <div class="lifeline-logo">
          <%= image_tag "lifeline-new.png", class:"life-logo" %>
        </div>
        <div class="signup-image">
          <%= image_tag "signup.png", class:"signup-img" %>
        </div>
        <div class="lifeline-text">
          <h3> WELCOME </h3>

          <p>Lifeline medics is an innovation that will incorporate NFC hardware and medical records to revolutionise how data is stored. We at lifeline will provide smart ornaments that store medical records on an easy walk around ornament i.e. a ring, wristband. </p>
        </div>
  </div>
  <div class="signup-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <h4>Log in</h4>
      <br>
    <div class = "form-group d-flex justify-content-center">
      <div class="d-flex flex-column">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
      </div>
    </div>

    <div class = "form-group d-flex justify-content-center" >
      <div class="d-flex flex-column"
        <%= f.label :password %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "password" , class: "form-control" %>
      </div>
    </div>

    <div class ="d-flex justify-content-between" style="height: 40px">
      <div class="d-flex justify-content-start">
        <%= f.submit "Log in" , class: "btn btn-primary btn-sm px-3 align-self-center" %>
      </div>
      <div class="d-flex justify-content-start">
        <%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-primary btn-sm align-self-center" %>
      </div>
    </div>
    <% end %>
  </div>
</div>