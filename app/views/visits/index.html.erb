<h1>Listing visits</h1>

<table>
  <tr>
    <th>Doctor comments</th>
    <th>Patient</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @visits.each do |visit| %>
  <tr>
    <td><%= visit.doctor_comments %></td>
    <td><%= visit.patient %></td>
    <td><%= link_to 'Show', [visit.patient, visit] %></td>
    <td><%= link_to 'Edit', edit_patient_visit_path(visit.patient, visit) %></td>
    <td><%= link_to 'Destroy', [visit.patient, visit], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

